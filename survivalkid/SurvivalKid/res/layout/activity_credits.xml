<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical" >

            <TextView
                android:id="@+id/credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/credits"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:typeface="normal"
                tools:context=".HowToPlayActivity" />

            <TextView
                android:id="@+id/creditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_below="@+id/credits"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/creditsText"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:typeface="normal" />

            <LinearLayout
                android:id="@+id/enemiesList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:scrollbars="none" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5px"
                    android:gravity="center_horizontal"
                    android:text="Development"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:typeface="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Thomas BONIN"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Frederic BEAUFORT"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.53"
                android:gravity="center_horizontal"
                android:text="@string/withParticipationOf"
                android:textColor="@android:color/white"
                android:textSize="8dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="FranÃ§ois DROUMAGUET"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5px"
                android:gravity="center_horizontal"
                android:text="Music"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="&quot;Ice and Chilli&quot; by _ghost (http://ccmixter.org/)"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:typeface="normal" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
